pkgname=phototonic
pkgver=0.90
pkgrel=1
pkgdesc="Image Viewer and Organizer"
arch=('i686' 'x86_64')
url="https://gitorious.org/phototonic"
license=('GPL3')
depends=('qt4')
source=("git://gitorious.org/phototonic/phototonic.git")
md5sums=('SKIP')
makedepends=('git')
provides=('phototonic')

build() {
  cd "$srcdir/$pkgname"
  qmake-qt4 PREFIX="/usr"
  make
}

package() {
  cd "$srcdir/$pkgname"
  make INSTALL_ROOT="$pkgdir/" install
}

